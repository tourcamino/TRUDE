# TRUDE Deployment Configuration
# This file contains environment variables and settings for automated deployment

# Vercel Configuration
VERCEL_PROJECT_NAME=trude-protocol
VERCEL_FRAMEWORK=vite
VERCEL_BUILD_COMMAND=npm run build
VERCEL_OUTPUT_DIRECTORY=.output
VERCEL_INSTALL_COMMAND=npm ci

# Render Configuration
RENDER_SERVICE_NAME=trude-protocol
RENDER_ENVIRONMENT=node
RENDER_BUILD_COMMAND=npm run build
RENDER_START_COMMAND=npm run start
RENDER_NODE_VERSION=18

# Environment Variables Required
# Copy these to your deployment platform:

# Blockchain Configuration
VITE_FACTORY_ADDRESS=
VITE_WALLETCONNECT_PROJECT_ID=
VITE_ALCHEMY_API_KEY=

# API Keys
VITE_DUNE_API_KEY=
VITE_MORALIS_API_KEY=
VITE_OPENAI_API_KEY=
VITE_COINGECKO_API_KEY=

# Database (Optional for production)
DATABASE_URL=

# Deployment Settings
NODE_ENV=production
DB_FALLBACK_MEM=1

# Feature Flags
ENABLE_AI_CHAT=true
ENABLE_ANALYTICS=true
ENABLE_DEBUG=false

# Security
ENABLE_CORS=true
CORS_ORIGIN=*

# Performance
CACHE_MAX_AGE=3600
ENABLE_COMPRESSION=true

# Monitoring
ENABLE_METRICS=true
LOG_LEVEL=info